# Backend Environment Variables
NODE_ENV=development
PORT=3002

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/flowforge
# For production with authentication:
# MONGODB_URI=mongodb://admin:password@localhost:27017/flowforge?authSource=admin

# Redis Configuration (Optional - gracefully degrades to in-memory if not available)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379 # Alternative to individual settings

# GitHub API Token (required for fetching action metadata)
# Create a personal access token at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# OpenAI API Key (required for AI features)
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Frontend URL (for CORS and OAuth callbacks)
FRONTEND_URL=http://localhost:5173

# JWT Secrets (REQUIRED - use strong random strings in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production

# GitHub OAuth (Optional - for GitHub sign-in)
# Create OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_CALLBACK_URL=http://localhost:3002/api/auth/github/callback

# Google OAuth (Optional - for Google sign-in)
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3002/api/auth/google/callback

# Sentry Error Tracking (Optional)
# SENTRY_DSN=your_sentry_dsn_here

# Email Configuration (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@flowforge.com
