{
  "name": "flowforge-backend",
  "version": "0.7.0",
  "description": "Backend API for FlowForge - GitHub Actions Workflow Builder",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "seed": "node seed.js",
    "update-actions": "node scripts/updateActions.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate-env": "node utils/validateEnv.js",
    "health": "curl http://localhost:3002/api/health || echo 'Server not running'",
    "logs": "tail -f ../logs/application-$(date +%Y-%m-%d).log",
    "logs:error": "tail -f ../logs/error-$(date +%Y-%m-%d).log",
    "backup": "bash ../scripts/backup.sh",
    "restore": "bash ../scripts/restore.sh",
    "security-audit": "bash ../scripts/security-audit.sh",
    "deploy": "bash ../scripts/deploy.sh",
    "rollback": "bash ../scripts/rollback.sh",
    "docker:build": "docker build -f Dockerfile.prod -t flowforge-backend:latest .",
    "docker:run": "docker run -p 3002:3002 --env-file .env flowforge-backend:latest"
  },
  "keywords": [
    "github-actions",
    "workflow",
    "ci-cd",
    "automation",
    "api"
  ],
  "author": "FlowForge Team",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "actionlint": "^2.0.6",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.2.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "openai": "^4.24.1",
    "passport-google-oauth20": "^2.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
